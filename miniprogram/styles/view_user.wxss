.userInfo{
    height:20%;
    width:100%;
    border-bottom-left-radius: 40%;
    border-bottom-right-radius: 40%;
    display:flex;
    flex-direction: column;
    justify-content: center;
    background-color: #4169E1;
    align-items: center;
}
.userInfoPortrait{
    border-radius: 50%;
    height: 120rpx;
    width: 120rpx;
    overflow: hidden;
    border-style:solid;
    border-color: white;
    border-width: 2rpx;
}
.userInfoText{
    color:white;
    font-size:120%;
}
.userSeperate{
    height: 5%;
    width: 100%;
    box-sizing: border-box;
    
}
.userDisplay{
    height:75%;
    overflow: auto;
    width:100%;
    display:flex; 
    flex-direction: column;
    align-items: center;
}
.userPart{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width:100%;
    height: 50%;
    border-radius: 80rpx;
    background-color: white;
    
    /* box-sizing:border-box; */
    /* border-style:solid;
    border-bottom-width: 2px;
    border-color: #D2D2D2; */
}
.userPartTitle{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 25%;
    width: 95%;
    color:#4169E1;
    font-weight: bold;
    font-size:40rpx;

    /* box-sizing:border-box;
    border-style:solid;
    border-width: 2px;
    border-color: #D2D2D2; */
}
.userPartItem{
    display: flex;
    justify-content: space-between;
    width: 90%;
    height: 20%;
    box-sizing: border-box;
    /* border-style: ; */
    border-bottom-style: solid;
    border-bottom-width: 1px;
    border-bottom-color: #D2D2D2;
    
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #D2D2D2; 
    /* border-radius: 50rpx; */
}
.userItemTitle{
    height: 95%;
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    box-sizing:border-box;
    border-right-style:solid;
    border-right-width: 1px;
    border-right-color: #D2D2D2;
    border-left-style:solid;
    border-left-width: 1px;
    border-left-color: #D2D2D2;
}
.userItemContent{
    height: 95%;
    width: 75%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: normal;
    
    box-sizing:border-box;
    border-right-style:solid;
    border-right-width: 1px;
    border-right-color: #D2D2D2;
    border-left-style:solid;
    border-left-width: 1px;
    border-left-color: #D2D2D2;
}
.userContentEach{
    height: 95%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 95%;
    /* font-weight: 400; */

}
