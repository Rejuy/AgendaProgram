.todayCell{
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    text-align:center;
    width: 100%;
    /* border-bottom-color: #D2D2D2;
    border-bottom-style: solid;
    border-bottom-width: 1px; */
}
.todayDisplay{
    width: 100%;
    height: 90%;
    overflow: scroll;
}
.todayItem{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100% !important;
    height: 100rpx;
    background-color: white;
    border-radius: 50rpx;
    font-size: 90%;
    box-sizing: border-box;
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #D2D2D2;
}
.todayItemText{
    display: flex;
    justify-content: center;
    width: 50%;
    align-items: center;
    font-weight: bold;
    font-size:80%;
}
.todayItemRemind{
    font-size:70%
}
.todayDetail{
    width: 95%;
    height: 150rpx;
    overflow: scroll;
    box-sizing: border-box;
    word-break: break-all;
    overflow: auto;
    text-align: left;

    border-top-color: #D2D2D2;
    border-top-width: 1px;
    border-top-style: solid;

    border-bottom-color: #D2D2D2;
    border-bottom-width: 1px;
    border-bottom-style: solid;
}
.todayOpBtns{
    display:flex;
    width: 100%;
    border-bottom-color: #D2D2D2;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    box-sizing: border-box;
}
.todayOpBtn{
    color:#4169E1;
    font-size:34rpx;
    font-weight: bolder;
}
